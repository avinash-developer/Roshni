<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Analytics">

    <TextView
        android:id="@+id/ldrtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LDR Status: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/pir1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIR 1 Status: "
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/pir2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIR 2 Status: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/firetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire Status: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />


</LinearLayout>
